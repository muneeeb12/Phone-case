@{
    ViewData["Title"] = "Make Payment to Vendor";
}

<div class="container mt-3">
    <h1>Pay Vendor</h1>

    <div class="card mb-4">
        <div class="card-header">Payment Details</div>
        <div class="card-body">
            @if (TempData["Error"] != null) {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Success"] != null) {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form method="post" asp-action="PayVendor">
                <input type="hidden" name="vendorId" value="@ViewBag.Vendor.VendorId">

                <div class="mb-3">
                    <label class="form-label">Vendor Name</label>
                    <input type="text" class="form-control" value="@ViewBag.Vendor.Name" readonly>
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Credit</label>
                    <input type="text" class="form-control" value="$@ViewBag.Vendor.TotalCredit" readonly>
                </div>

                <div class="mb-3">
                    <label class="form-label">Payment Amount</label>
                    <input type="number" class="form-control" name="amount" min="0.01" step="0.01" required>
                </div>

                <!-- Add Payment Date Input -->
                <div class="mb-3">
                    <label class="form-label">Payment Date</label>
                    <input type="date" class="form-control" name="paymentDate"
                           value="@DateTime.Now.ToString("yyyy-MM-dd")"
                           min="@ViewBag.OldestPurchaseDate?.ToString("yyyy-MM-dd")"
                           max="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                </div>

                <button type="submit" class="btn btn-primary">Pay Vendor</button>
                <a href="@Url.Action("VendorHistory", "Vendor", new { vendorId = ViewBag.Vendor.VendorId })" class="btn btn-secondary">Back to Vendor History</a>
            </form>
        </div>
    </div>
</div>