@model List<Phonecase.Models.Vendor>

@{
    ViewData["Title"] = "Vendor Management";
}

<div class="container mt-3">
    <h1>Vendor Management</h1>

    <!-- Add Vendor Form -->
    <div class="card mb-4">
        <div class="card-header">Add New Vendor</div>
        <div class="card-body">
            <form method="post" asp-action="AddVendor">
                <div class="mb-3">
                    <label class="form-label">Vendor Name</label>
                    <input type="text" class="form-control" name="name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Contact Info</label>
                    <input type="text" class="form-control" name="contactInfo">
                </div>
                <button type="submit" class="btn btn-primary">Add Vendor</button>
            </form>
        </div>
    </div>

    <!-- Vendor List -->
    <div class="card">
        <div class="card-header">Vendors</div>
        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact Info</th>
                        <th>Total Credit</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vendor in Model) {
                        <tr>
                            <td>@vendor.Name</td>
                            <td>@vendor.ContactInfo</td>
                            <td>@vendor.TotalCredit.ToString("C")</td>
                            <td>
                                <form method="post" asp-action="DeleteVendor" onsubmit="return confirmDelete()">
                                    <input type="hidden" name="vendorId" value="@vendor.VendorId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            <td>
                                <a href="@Url.Action("VendorHistory", "Vendor", new { vendorId = vendor.VendorId })"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-clock-history"></i> View History
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Script -->
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this vendor?");
    }
</script>