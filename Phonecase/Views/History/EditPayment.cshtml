@model Phonecase.Models.Payment

@{
    ViewData["Title"] = "Edit Payment";
}

<h1>Edit Payment</h1>

<div class="card">
    <div class="card-header">Modify Payment Details</div>
    <div class="card-body">
        <form asp-action="EditPayment" method="post">
            <input type="hidden" asp-for="PaymentId" />

            <div class="form-group">
                <label>Vendor</label>
                <input type="text" class="form-control" value="@Model.Vendor.Name" disabled />
            </div>

            <div class="form-group">
                <label>Payment Amount</label>
                <input type="number" asp-for="Amount" class="form-control" step="0.01" required />
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </form>
    </div>
</div>
