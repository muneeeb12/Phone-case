@model Phonecase.Models.Purchase

@{
    ViewData["Title"] = "Edit Purchase";
}

<div class="container mt-4">
    <h1 class="text-primary">Edit Purchase</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Purchase Details</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-action="EditPurchase">
                <input type="hidden" name="id" value="@Model.PurchaseId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Product</label>
                    <input type="text" class="form-control" value="@Model.Product?.CaseName" readonly>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Quantity</label>
                    <input type="number" class="form-control" name="quantity" value="@Model.Quantity" required>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Unit Price</label>
                    <input type="number" class="form-control" name="unitPrice" value="@Model.UnitPrice" step="0.01" required>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="@Url.Action("PurchaseHistory", "History", new { vendorId = Model.VendorId, filter = "all" })" class="btn btn-secondary">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
