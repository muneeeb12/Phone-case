@{
    ViewData["Title"] = "Management";
}

<div class="container mt-3">
    <h2 class="mb-4">Management</h2>

    <!-- Forms Section -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-light">Add Case Company</div>
                <div class="card-body">
                    <form method="post" asp-action="AddCaseCompany">
                        <div class="mb-3">
                            <label class="form-label">Company Name</label>
                            <input type="text" class="form-control" name="companyName" required>
                        </div>
                        <button type="submit" class="btn btn-outline-primary w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-light">Add Phone Model</div>
                <div class="card-body">
                    <form method="post" asp-action="AddPhoneModel">
                        <div class="mb-3">
                            <label class="form-label">Model Name</label>
                            <input type="text" class="form-control" name="modelName" required>
                        </div>
                        <button type="submit" class="btn btn-outline-primary w-100">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card">
        <div class="card-header bg-light">Case Companies & Phone Models</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-center mb-3">Case Companies</h5>
                    <table class="table table-bordered table-hover text-center">
                        <thead class="thead-light">
                            <tr>
                                <th>Company Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in ViewBag.CaseCompanies) {
                                <tr>
                                    <td>@company.Name</td>
                                    <td>
                                        <form method="post" asp-action="DeleteCaseCompany" class="d-inline">
                                            <input type="hidden" name="CaseManufacturerId" value="@company.CaseManufacturerId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="text-center mb-3">Phone Models</h5>
                    <table class="table table-bordered table-hover text-center">
                        <thead class="thead-light">
                            <tr>
                                <th>Model Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var modelphone in ViewBag.PhoneModels) {
                                <tr>
                                    <td>@modelphone.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>