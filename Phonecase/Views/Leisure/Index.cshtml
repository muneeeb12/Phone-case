@{
    ViewBag.Title = "Vendor Leisure";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-search"></i> Search Vendor</h2>

    <!-- Search Form -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Transactions</h5>
        </div>
        <div class="card-body p-4">
            <form method="post" action="@Url.Action("VendorLeisure", "Leisure")">
                <div class="row g-3">
                    <!-- Vendor Selection -->
                    <div class="col-md-6">
                        <label class="form-label fw-bold"><i class="bi bi-person-fill"></i> Select Vendor</label>
                        <select name="vendorId" class="form-control shadow-sm" required>
                            <option value="">Choose Vendor</option>
                            @foreach (var vendor in ViewBag.Vendors) {
                                <option value="@vendor.VendorId">@vendor.Name</option>
                            }
                        </select>
                    </div>

                    <!-- Time Filter -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold"><i class="bi bi-calendar-range"></i> Time Filter</label>
                        <select name="filter" class="form-control shadow-sm">
                            <option value="week">Last Week</option>
                            <option value="month">Last Month</option>
                        </select>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
